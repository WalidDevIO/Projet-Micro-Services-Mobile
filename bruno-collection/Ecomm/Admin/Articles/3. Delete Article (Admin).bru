}

delete {
  url: {{ecommUrl}}/admin/articles/{{article-id}}
  body: none
  auth: apikey
}

auth:apikey {
  key: Authentication
  value: {{admin-token}}
  placement: header
}

tests {
  test("Status is 204", function() {
    expect(res.status).to.equal(204);
  });
}

script:post-response {
  if (res.status === 204) {
    console.log("âœ… Article deleted successfully");
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
